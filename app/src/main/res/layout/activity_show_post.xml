<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_60"
        android:layout_marginTop="@dimen/px_16"
        android:layout_marginBottom="@dimen/px_16">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_topic_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#话题"/>
            <TextView
                android:id="@+id/btn_topic_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="填写话题，获更多关注哦！"/>
        </LinearLayout>

    </HorizontalScrollView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:inputType="textMultiLine"
        android:hint="添加描述"
        android:gravity="start"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_60">
        <ImageView
            android:id="@+id/iv_emotion_entry"
            android:layout_width="@dimen/px_60"
            android:layout_height="@dimen/px_60"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_qq"/>
        <EditText
            android:id="@+id/et_user_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_location_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/52"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_zm_kaimeng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="芝麻开门"/>
        <Button
            android:id="@+id/btn_fb_yaoyue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布邀约"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同步到："/>
        <ImageView
            android:layout_width="@dimen/px_70"
            android:layout_height="@dimen/px_70"
            android:scaleType="fitXY"
            android:src="@mipmap/umeng_socialize_wxcircle"/>
        <ImageView
            android:layout_width="@dimen/px_70"
            android:layout_height="@dimen/px_70"
            android:scaleType="fitXY"
            android:src="@mipmap/umeng_socialize_qzone_off"/>
        <ImageView
            android:layout_width="@dimen/px_70"
            android:layout_height="@dimen/px_70"
            android:scaleType="fitXY"
            android:src="@mipmap/umeng_socialize_sina_off"/>
    </LinearLayout>

    <com.ybg.yxym.yueshow.view.processButton.impl.GenerateProcessButton
        android:id="@+id/btn_complete_register"
        style="@style/btn_24pt_7dcf2c_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_88"
        android:layout_marginTop="@dimen/px_16"
        android:onClick="onClick"
        android:text="发布"
        app:pb_textComplete="完成"
        app:pb_textProgress="正在上传数据..."/>
</LinearLayout>