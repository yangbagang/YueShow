<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.ybg.yxym.yueshow.activity.msg.DateDetailActivity">

    <TextView
        android:id="@+id/tv_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_26"
        android:layout_marginTop="@dimen/px_26"
        android:text="11:11"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ybg.yxym.yueshow.view.CircleImageView
            android:id="@+id/ci_date_avatar"
            android:layout_width="@dimen/px_80"
            android:layout_height="@dimen/px_80"
            android:layout_marginLeft="@dimen/px_30"
            android:src="@mipmap/default_avatar"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_100"
            android:layout_weight="1"
            android:background="@drawable/shape_biaoqian_blue_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_20"
                android:layout_marginTop="@dimen/px_20"
                android:text="约一个吧"
                android:textColor="@color/white"
                android:textSize="@dimen/px_text_30"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_2"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_marginRight="@dimen/px_30"
                android:background="#2dbdf1"/>

            <TextView
                android:id="@+id/tv_date_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/px_40"
                android:layout_marginTop="@dimen/px_22"
                android:text="吃饭"
                android:textColor="@color/white"
                android:textSize="@dimen/px_text_30"/>

            <TextView
                android:id="@+id/tv_date_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/px_40"
                android:layout_marginTop="@dimen/px_22"
                android:text="礼物送500元"
                android:textColor="@color/white"
                android:textSize="@dimen/px_text_30"/>

            <TextView
                android:id="@+id/tv_date_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/px_40"
                android:layout_marginTop="@dimen/px_22"
                android:text="2016-12-12"
                android:textColor="@color/white"
                android:textSize="@dimen/px_text_30"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_2"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_marginRight="@dimen/px_30"
                android:layout_marginTop="@dimen/px_22"
                android:background="@color/white"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_20"
                android:layout_marginTop="@dimen/px_20">

                <Button
                    android:layout_width="@dimen/px_158"
                    android:layout_height="@dimen/px_60"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/px_50"
                    android:background="@drawable/shape_bg_login"
                    android:onClick="rejectDate"
                    android:text="拒绝"
                    android:textColor="#545866"
                    android:textSize="@dimen/px_text_30"/>

                <Button
                    android:layout_width="@dimen/px_158"
                    android:layout_height="@dimen/px_60"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/px_50"
                    android:background="@drawable/shape_bg_login"
                    android:onClick="acceptDate"
                    android:text="接受"
                    android:textColor="#545866"
                    android:textSize="@dimen/px_text_30"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
