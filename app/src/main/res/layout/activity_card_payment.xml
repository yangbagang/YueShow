<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.ybg.yxym.yueshow.activity.gift.CardPaymentActivity">

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_80"
        android:layout_marginTop="@dimen/px_100"
        android:text="共需支付0元"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_80"
        android:text="请选择支付方式"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_wx_pay"
            android:layout_width="@dimen/px_200"
            android:layout_height="@dimen/px_200"
            android:background="@drawable/shape_bg_green_edge"
            android:drawableTop="@mipmap/icon_weixin"
            android:gravity="center"
            android:paddingTop="@dimen/px_30"
            android:text="微信"/>

        <View
            android:layout_width="@dimen/px_40"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_zfb_pay"
            android:layout_width="@dimen/px_200"
            android:layout_height="@dimen/px_200"
            android:background="@drawable/shape_bg_green_edge"
            android:drawableTop="@mipmap/icon_zhifubao"
            android:gravity="center"
            android:paddingTop="@dimen/px_30"
            android:text="支付宝"/>
    </LinearLayout>
</LinearLayout>
