<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_gift_img"
        android:layout_width="@dimen/px_118"
        android:layout_height="@dimen/px_66"
        android:layout_marginTop="@dimen/px_30"
        android:scaleType="fitCenter"
        android:src="@mipmap/liwu_color"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_30">

        <TextView
            android:id="@+id/tv_gift_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18"/>

        <ImageView
            android:layout_width="@dimen/px_30"
            android:layout_height="@dimen/px_30"
            android:layout_marginLeft="@dimen/px_3"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_entry_round_yellow"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_30">

        <TextView
            android:id="@+id/tv_gift_ml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+72"
            android:textColor="@color/header_normal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_3"
            android:text="美力值"/>
    </LinearLayout>
</LinearLayout>