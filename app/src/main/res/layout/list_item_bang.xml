<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/px_158"
              android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_pm"
        android:layout_width="@dimen/px_42"
        android:layout_height="@dimen/px_72"
        android:layout_marginLeft="@dimen/px_34"
        android:scaleType="fitXY"
        android:src="@mipmap/pm1"/>

    <TextView
        android:id="@+id/tv_pm"
        android:layout_width="@dimen/px_42"
        android:layout_height="@dimen/px_72"
        android:gravity="center"
        android:layout_marginLeft="@dimen/px_34"
        android:text="1"
        android:textSize="@dimen/px_text_30"
        android:textColor="#545866"/>

    <com.ybg.yxym.yueshow.view.CircleImageView
        android:id="@+id/ci_pm"
        android:layout_width="@dimen/px_80"
        android:layout_height="@dimen/px_80"
        android:src="@mipmap/ic_default_girl"
        android:layout_marginLeft="@dimen/px_30"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/px_16">
        <TextView
            android:id="@+id/tv_pm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="孙行者"
            android:textSize="@dimen/px_text_30"
            android:textColor="#545866"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美力值"
                android:textSize="@dimen/px_text_24"
                android:textColor="#545866"/>
            <TextView
                android:id="@+id/tv_pm_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456"
                android:textSize="@dimen/px_text_24"
                android:textColor="#de4942"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/px_20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最强蜜爱"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/px_text_30"
            android:textColor="#545866"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_mi_0"
                android:layout_width="@dimen/px_44"
                android:layout_height="@dimen/px_44"
                android:src="@mipmap/ic_default_girl"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/iv_mi_1"
                android:layout_width="@dimen/px_44"
                android:layout_height="@dimen/px_44"
                android:layout_marginLeft="@dimen/px_10"
                android:src="@mipmap/ic_default_girl"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/iv_mi_2"
                android:layout_width="@dimen/px_44"
                android:layout_height="@dimen/px_44"
                android:layout_marginLeft="@dimen/px_10"
                android:src="@mipmap/ic_default_girl"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>