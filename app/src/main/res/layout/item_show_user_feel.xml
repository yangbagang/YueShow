<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="#dadada"/>

    <TextView
        android:id="@+id/tv_show_user_feel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_line"
        android:layout_marginBottom="@dimen/px_24"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginTop="@dimen/px_24"
        android:textColor="#545866"
        android:textSize="@dimen/px_24"/>

    <TextView
        android:id="@+id/tv_show_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_show_user_feel"
        android:paddingBottom="@dimen/px_24"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"
        android:text="显示详情"
        android:textColor="#bfc5ca"
        android:textSize="@dimen/px_24"/>

</RelativeLayout>