<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_94"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <com.ybg.yxym.yueshow.view.CircleImageView
        android:id="@+id/ci_ping_user"
        android:layout_width="@dimen/px_48"
        android:layout_height="@dimen/px_48"
        android:src="@mipmap/ic_default_girl"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_ping_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_20"
            android:text="新宿330"
            android:textSize="@dimen/px_text_20"
            android:textColor="#aab1b8"/>
        <TextView
            android:id="@+id/tv_ping_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_16"
            android:text="dfsdfsdfasdfasd"
            android:textSize="@dimen/px_text_18"
            android:textColor="#4d5359"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/px_30"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_ping_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#b5bbc1"
            android:textSize="@dimen/px_text_18"
            android:text="2小时前"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>