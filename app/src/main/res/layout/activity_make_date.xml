<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ybg.yxym.yueshow.activity.show.MakeDateActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_20"
        android:background="#ecedf3"/>

    <TextView
        android:id="@+id/tv_date_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date_price"
        android:layout_marginLeft="@dimen/px_36"
        android:layout_marginRight="@dimen/px_36"
        android:layout_marginTop="@dimen/px_36"
        android:textColor="#4d5359"
        android:textSize="@dimen/px_text_30"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_36"
        android:layout_marginRight="@dimen/px_36"
        android:layout_marginTop="@dimen/px_70"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="@dimen/px_40"
            android:layout_height="@dimen/px_40"
            android:scaleType="fitXY"
            android:src="@mipmap/date_item"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/px_82"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/px_40"
            android:gravity="center"
            android:text="吃饭"
            android:textColor="#4d5359"
            android:textSize="@dimen/px_text_30"
            android:background="@drawable/shape_gray_border"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_36"
        android:layout_marginRight="@dimen/px_36"
        android:layout_marginTop="@dimen/px_50"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="@dimen/px_40"
            android:layout_height="@dimen/px_40"
            android:scaleType="fitXY"
            android:src="@mipmap/liwu_color"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/px_82"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/px_40"
            android:gravity="center"
            android:text="一束玫瑰花"
            android:textColor="#4d5359"
            android:textSize="@dimen/px_text_30"
            android:background="@drawable/shape_gray_border"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_36"
        android:layout_marginRight="@dimen/px_36"
        android:layout_marginTop="@dimen/px_50"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="@dimen/px_40"
            android:layout_height="@dimen/px_40"
            android:scaleType="fitXY"
            android:src="@mipmap/location_color"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/px_82"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/px_40"
            android:gravity="center"
            android:text="深圳市"
            android:textColor="#4d5359"
            android:textSize="@dimen/px_text_30"
            android:background="@drawable/shape_gray_border"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_36"
        android:layout_marginRight="@dimen/px_36"
        android:layout_marginTop="@dimen/px_50"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="@dimen/px_40"
            android:layout_height="@dimen/px_40"
            android:scaleType="fitXY"
            android:src="@mipmap/date_date"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/px_82"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/px_40"
            android:gravity="center"
            android:text="时间不限"
            android:textColor="#4d5359"
            android:textSize="@dimen/px_text_30"
            android:background="@drawable/shape_gray_border"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_60"
        android:layout_marginRight="@dimen/px_60"
        android:layout_marginTop="@dimen/px_60">
        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/px_88"
            android:layout_weight="2"
            android:background="@drawable/shape_btn_login"
            android:text="取消"
            android:textSize="@dimen/px_text_30"
            android:textColor="@color/white"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/px_88"
            android:layout_weight="2"
            android:background="@drawable/shape_btn_login"
            android:text="开启约会"
            android:textSize="@dimen/px_text_30"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
