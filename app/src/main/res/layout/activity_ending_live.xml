<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_start_live"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_start_live_bg">

    <RelativeLayout
        android:id="@+id/rc_above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_90"
        android:layout_marginRight="@dimen/px_90"
        android:layout_marginTop="@dimen/px_150">

        <TextView
            android:id="@+id/tv_ending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:text="直播结束"
            android:textColor="@color/color_live_word"
            android:textSize="@dimen/px_50" />


        <RelativeLayout
            android:id="@+id/rl_watch_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ending"
            android:layout_marginTop="@dimen/px_50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="观看人数"
                android:textColor="@color/color_live_word"
                android:textSize="@dimen/px_30" />

            <TextView
                android:id="@+id/tv_watching_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:text="21"
                android:textColor="@color/color_live_word"
                android:textSize="@dimen/px_30" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_parise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_watch_people"
            android:layout_marginTop="@dimen/px_40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="获得赞数"
                android:textColor="@color/color_live_word"
                android:textSize="@dimen/px_30" />

            <TextView
                android:id="@+id/tv_parise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:text="20"
                android:textColor="@color/color_live_word"
                android:textSize="@dimen/px_30" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_meidou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_parise"
            android:layout_marginTop="@dimen/px_40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="获得美豆"
                android:textColor="@color/color_live_word"
                android:textSize="@dimen/px_30" />

            <TextView
                android:id="@+id/tv_get_meidou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:text="20"
                android:textColor="@color/color_live_word"
                android:textSize="@dimen/px_30" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_live_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_meidou"
            android:layout_marginTop="@dimen/px_40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="直播时长"
                android:textColor="@color/color_live_word"
                android:textSize="@dimen/px_30" />

            <TextView
                android:id="@+id/tv_live_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:text="0小时05分09秒"
                android:textColor="@color/color_live_word"
                android:textSize="@dimen/px_30" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_live_time"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_150"
            android:background="@null"
            android:text="分享到"
            android:textColor="@color/color_live_word"
            android:textSize="@dimen/px_30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_share"
            android:layout_marginTop="@dimen/px_50"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_share_sina"
                android:layout_width="@dimen/px_44"
                android:layout_height="@dimen/px_52"
                android:layout_weight="1"
                android:onClick="onClick"
                android:src="@mipmap/ic_xinlang" />

            <ImageView
                android:id="@+id/iv_share_weixin"
                android:layout_width="@dimen/px_44"
                android:layout_height="@dimen/px_52"
                android:layout_weight="1"
                android:onClick="onClick"
                android:src="@mipmap/ic_weixin" />

            <ImageView
                android:id="@+id/iv_share_friend"
                android:layout_width="@dimen/px_44"
                android:layout_height="@dimen/px_52"
                android:layout_weight="1"
                android:onClick="onClick"
                android:src="@mipmap/ic_pengyouquan" />

            <ImageView
                android:id="@+id/iv_share_qq"
                android:layout_width="@dimen/px_44"
                android:layout_height="@dimen/px_52"
                android:layout_weight="1"
                android:onClick="onClick"
                android:src="@mipmap/ic_qq" />

            <ImageView
                android:id="@+id/iv_share_space"
                android:layout_width="@dimen/px_44"
                android:layout_height="@dimen/px_52"
                android:layout_weight="1"
                android:onClick="onClick"
                android:src="@mipmap/ic_kongjian" />
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_back_home"
        android:layout_width="@dimen/px_290"
        android:layout_height="@dimen/px_64"
        android:layout_below="@id/rc_above"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px_84"
        android:background="@mipmap/ic_kuang"
        android:onClick="onClick"
        android:text="返回首页"
        android:textColor="@color/color_live_word" />

</RelativeLayout>