<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_98"
    android:background="@android:color/transparent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.ybg.yxym.yueshow.view.CircleImageView
        android:id="@+id/userAvatar"
        android:layout_width="@dimen/px_86"
        android:layout_height="@dimen/px_86"
        android:src="@mipmap/ic_default_girl" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/px_32"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px_text_24" />

        <TextView
            android:id="@+id/msgText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_16"
            android:textColor="#ede87d"
            android:textSize="@dimen/px_text_30" />
    </LinearLayout>

    <ImageView
        android:id="@+id/liveGift"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitCenter" />
</LinearLayout>