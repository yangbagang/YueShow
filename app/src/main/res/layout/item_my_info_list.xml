<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_34"
        android:layout_marginLeft="@dimen/px_26"
        android:layout_marginTop="@dimen/px_34"
        android:text="个人资料"
        android:textColor="#545866"
        android:textSize="@dimen/px_30"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/px_34"
        android:layout_marginRight="@dimen/px_58"
        android:layout_marginTop="@dimen/px_34"
        android:ellipsize="marquee"
        android:maxEms="10"
        android:text="spurs"
        android:textColor="#545866"
        android:textSize="@dimen/px_30"/>

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px_28"
        android:src="@mipmap/ic_gray_right_arrow"/>

</RelativeLayout>