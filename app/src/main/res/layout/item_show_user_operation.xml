<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="#dadada"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_32"
            android:layout_marginLeft="@dimen/px_34"
            android:layout_marginRight="@dimen/px_34"
            android:layout_marginTop="@dimen/px_30">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_show_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:src="@mipmap/ic_show_comment"/>

                <TextView
                    android:id="@+id/tv_show_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px_10"
                    android:layout_toRightOf="@+id/iv_show_comment"
                    android:text="0"
                    android:textColor="#545866"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/iv_show_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:src="@mipmap/ic_show_praise"/>

                <TextView
                    android:id="@+id/tv_show_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px_10"
                    android:layout_toRightOf="@+id/iv_show_praise"
                    android:text="0"
                    android:textColor="#545866"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/iv_show_transmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:src="@mipmap/ic_show_transmit"/>

                <TextView
                    android:id="@+id/tv_show_transmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px_10"
                    android:layout_toRightOf="@+id/iv_show_transmit"
                    android:text="0"
                    android:textColor="#545866"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>