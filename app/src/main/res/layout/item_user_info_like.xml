<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <!--点赞人头像-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/px_32"
            android:layout_height="@dimen/px_34"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_24"
            android:src="@mipmap/ic_like_red"/>

        <LinearLayout
            android:id="@+id/ll_user_like_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/tv_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_24"
            android:layout_marginRight="@dimen/px_20"
            android:background="@drawable/shape_gray_bg"
            android:gravity=""
            android:paddingBottom="@dimen/px_4"
            android:paddingLeft="@dimen/px_12"
            android:paddingRight="@dimen/px_12"
            android:paddingTop="@dimen/px_4"
            android:text="489"
            android:textColor="@color/white"
            android:textSize="@dimen/px_18"/>
    </LinearLayout>

</LinearLayout>