<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

    <com.ybg.yxym.yueshow.view.CircleImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/px_70"
        android:layout_height="@dimen/px_70"
        android:layout_marginBottom="@dimen/px_18"
        android:layout_marginLeft="@dimen/px_26"
        android:layout_marginTop="@dimen/px_18"
        android:src="@mipmap/ic_default_girl"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_logo">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_26"
            android:text="同学"
            android:textColor="#4d5359"
            android:textSize="@dimen/px_30"/>

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="@dimen/px_26"
            android:layout_marginTop="@dimen/px_16"
            android:text="你已经添加了同学"
            android:textColor="#aeaeae"
            android:textSize="@dimen/px_22"/>

        <TextView
            android:id="@+id/tv_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_30"
            android:text="星期二"
            android:textColor="#aab1b8"
            android:textSize="@dimen/px_20"/>

    </RelativeLayout>

</RelativeLayout>