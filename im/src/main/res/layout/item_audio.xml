<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffff"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/audio_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <CheckBox
            android:id="@+id/audio_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/pictures_select_icon"
            android:button="@null"/>

        <com.ybg.yxym.im.view.MyImageView
            android:id="@+id/audio_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/jmui_audio"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/audio_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/audio"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/audio_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/send_file_desc_color"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/audio_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/send_file_desc_color"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/me_split_line_color"/>

</LinearLayout>