<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout android:id="@+id/frame_layout"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:descendantFocusability="blocksDescendants">

    <com.ybg.yxym.im.view.MyImageView
        android:id="@+id/child_image"
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:scaleType="centerCrop"
        android:src="@mipmap/jmui_picture_not_found"/>

    <LinearLayout
        android:id="@+id/checkbox_ll"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|right"
        android:gravity="center">

        <CheckBox
            android:id="@+id/child_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pictures_select_icon"
            android:button="@null"/>

    </LinearLayout>

</FrameLayout>
